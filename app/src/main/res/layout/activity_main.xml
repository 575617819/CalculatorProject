<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context="com.example.administrator.calculatorproject.MainActivity"
    android:id="@+id/gl_main_keyboard">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="right"
        android:textSize="50sp"
        android:textStyle="bold"
        android:background="#000000"
        android:textColor="#fff"
        android:paddingRight="10dp"
        android:id="@+id/tv_main_result"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="清除"
        android:textSize="20sp"
        android:onClick="delete"
        android:background="@drawable/delete_final_bg"
        android:layout_marginTop="5dp"
        />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            >

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="7"
                android:textSize="30sp"
                android:id="@+id/bt7"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="8"
                android:textSize="30sp"
                android:id="@+id/bt8"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="9"
                android:textSize="30sp"
                android:id="@+id/bt9"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="/"
                android:textSize="30sp"
                android:id="@+id/bt_divide"
                />

        </TableRow>

    </TableLayout>


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            >

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="4"
                android:textSize="30sp"
                android:id="@+id/bt4"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="5"
                android:textSize="30sp"
                android:id="@+id/bt5"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="6"
                android:textSize="30sp"
                android:id="@+id/bt6"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="*"
                android:textSize="30sp"
                android:id="@+id/bt_multiply"
                />

        </TableRow>

    </TableLayout>


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            >

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="1"
                android:textSize="30sp"
                android:id="@+id/bt1"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="2"
                android:textSize="30sp"
                android:id="@+id/bt2"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="3"
                android:textSize="30sp"
                android:id="@+id/bt3"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="-"
                android:textSize="30sp"
                android:id="@+id/bt_subtract"
                />

        </TableRow>

    </TableLayout>


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            >

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="."
                android:textSize="30sp"
                android:id="@+id/bt_point"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="0"
                android:textSize="30sp"
                android:id="@+id/bt0"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="="
                android:textSize="30sp"
                android:id="@+id/bt_result"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="+"
                android:textSize="30sp"
                android:id="@+id/bt_add"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>
